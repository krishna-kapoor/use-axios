{
    "compilerOptions": {
        "target": "ES5",
        "module": "CommonJS",
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "outDir": "./",
        "declaration": true,
        "declarationMap": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "allowJs": false
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
